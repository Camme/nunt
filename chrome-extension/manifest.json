{
  "name": "Nunt Debugger",
  "version": "0.2",
  "icons": { 
      "32": "icon_32.png",  
      "64": "icon_64.png",
      "48": "icon_48.png" 
  },
  "description": "A small debugger for nunt (javascript/node event system)",
  "background_page": "html/background.html",
  "page_action": {
      "default_icon": "icon_32.png", 
      "default_title": "Open Nunt Debugger"
    },
    
"devtools_page": "html/devtools.html",

  "content_scripts" : [
      {
        "matches" : [
          "http://*/*",
          "https://*/*"
        ],
        "js" : ["js/contentscript.js"],
        "run_at" : "document_idle",
        "all_frames" : false
      }
    ],
  "permissions": ["experimental", "tabs", "background", "http://*/*", "https://*/*"]
}